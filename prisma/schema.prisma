datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id             Int      @id @default(autoincrement())
  name           String
  group          String?
  logo           String? // ‚Üê Nowe pole na URL/logo
  players        Player[]
  matchesAsTeamA Match[]  @relation("TeamA")
  matchesAsTeamB Match[]  @relation("TeamB")
}

model Player {
  id       Int    @id @default(autoincrement())
  name     String
  jersey   Int
  team     Team   @relation(fields: [teamId], references: [id])
  teamId   Int
  uniqueId String @unique
  goals    Int    @default(0) // üèÜ Nowe pole

  @@unique([teamId, jersey])
}

model Match {
  id         Int      @id @default(autoincrement())
  teamAId    Int
  teamBId    Int
  teamAScore Int      @default(0)
  teamBScore Int      @default(0)
  status     String // scheduled, in_progress, finished
  startTime  DateTime

  teamA Team @relation("TeamA", fields: [teamAId], references: [id])
  teamB Team @relation("TeamB", fields: [teamBId], references: [id])
}
