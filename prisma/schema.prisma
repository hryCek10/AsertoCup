datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id        Int      @id @default(autoincrement())
  name      String
  group     String?  // np. "A", "B", "C", "D"
  players   Player[]
  matchesAsTeamA Match[] @relation("TeamA")
  matchesAsTeamB Match[] @relation("TeamB")
}

model Player {
  id        Int    @id @default(autoincrement())
  name      String
  jersey    Int
  uniqueId  String @unique
  teamId    Int
  team      Team   @relation(fields: [teamId], references: [id])

  @@unique([teamId, jersey])
}

model Match {
  id         Int      @id @default(autoincrement())
  teamAId    Int
  teamBId    Int
  teamAScore Int      @default(0)
  teamBScore Int      @default(0)
  status     String   // scheduled, in_progress, finished
  startTime  DateTime

  teamA      Team     @relation("TeamA", fields: [teamAId], references: [id])
  teamB      Team     @relation("TeamB", fields: [teamBId], references: [id])
}
